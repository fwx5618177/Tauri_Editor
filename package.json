{
    "name": "tauri",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "prepare": "husky install",
        "bootstrap": "npm install",
        "dev": "cross-env NODE_ENV=development vite",
        "czg": "czg",
        "log": "conventional-changelog -p angular -i CHANGELOG.md -s",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "tauri": "tauri",
        "tauri:dev": "tauri dev",
        "lint": "eslint --cache --max-warnings 0  \"{src,mock}/**/*.{js,mjs,cjs,ts,mts,cts,vue,tsx}\" --fix",
        "lint:stylelint": "stylelint --cache --fix \"**/*.{ts,tsx,less,postcss,css,scss}\" --cache --cache-location node_modules/.cache/stylelint/",
        "lint:lint-staged": "lint-staged",
        "test": "jest --config jest.config.ts --forceExit --detectOpenHandles",
        "test:vitest": "npm run test:unit && npm run test:e2e",
        "test:unit": "jest",
        "test:e2e": "npm run build && vitest run",
        "test:coverage": "vitest run --coverage",
        "reinstall": "rimraf package-lock.json && rimraf yarn.lock.json && rimraf node_modules && npm run bootstrap"
    },
    "engines": {
        "node": "^16.10.0 || >=18.0.0"
    },
    "dependencies": {
        "@babel/core": "^7.20.12",
        "@babel/plugin-proposal-class-properties": "^7.18.6",
        "@babel/plugin-syntax-jsx": "^7.18.6",
        "@babel/preset-env": "^7.20.2",
        "@babel/preset-react": "^7.18.6",
        "@babel/preset-typescript": "^7.18.6",
        "@emotion/react": "^11.10.5",
        "@emotion/styled": "^11.10.5",
        "@tauri-apps/api": "^1.2.0",
        "@tauri-apps/cli-darwin-arm64": "^1.2.2",
        "@types/esprima": "^4.0.3",
        "@types/jest": "^29.2.5",
        "@typescript-eslint/eslint-plugin": "^5.48.0",
        "@typescript-eslint/parser": "^5.48.0",
        "axios": "^1.2.2",
        "babel-jest": "^29.3.1",
        "babel-plugin-import": "^1.13.5",
        "conventional-changelog-cli": "^2.2.2",
        "cross-env": "^7.0.3",
        "cz-git": "^1.4.1",
        "czg": "^1.4.1",
        "dayjs": "^1.11.7",
        "dotenv": "^16.0.3",
        "eslint": "^8.31.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-prettier": "^4.2.1",
        "esprima": "^4.0.1",
        "i18next": "^22.4.8",
        "jest": "^29.3.1",
        "jest-environment-jsdom": "^29.3.1",
        "jest-environment-node": "^29.3.1",
        "less": "^4.1.3",
        "lint-staged": "^13.1.0",
        "lodash-es": "^4.17.21",
        "postcss-html": "^1.5.0",
        "prettier": "^2.8.1",
        "prop-types": "^15.8.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-i18next": "^12.1.1",
        "react-router-dom": "^6.6.1",
        "rimraf": "^3.0.2",
        "rsuite": "^5.24.0",
        "sass": "^1.57.1",
        "stylelint": "^14.16.1",
        "stylelint-config-prettier": "^9.0.4",
        "stylelint-config-prettier-scss": "^0.0.1",
        "stylelint-config-rational-order": "^0.1.2",
        "stylelint-config-recess-order": "^3.0.0",
        "stylelint-config-recommended": "^9.0.0",
        "stylelint-config-standard": "^29.0.0",
        "stylelint-config-standard-scss": "^5.0.0",
        "stylelint-declaration-block-no-ignored-properties": "^2.6.0",
        "stylelint-less": "^1.0.6",
        "stylelint-order": "^5.0.0",
        "stylelint-scss": "^4.3.0",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "vitest": "^0.26.3"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.4.0",
        "@commitlint/config-conventional": "^17.4.0",
        "@tauri-apps/cli": "^1.2.2",
        "@types/node": "^18.11.18",
        "@types/react": "^18.0.26",
        "@types/react-dom": "^18.0.10",
        "@vitejs/plugin-react": "^3.0.0",
        "@vitest/coverage-c8": "^0.26.3",
        "husky": "^8.0.3",
        "typescript": "^4.9.4",
        "vite": "^4.0.4"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "{!(package)*.json,*.code-snippets,.!(browserslist)*rc}": [
            "prettier --write--parser json"
        ],
        "package.json": [
            "prettier --write"
        ],
        "*.{scss,less,style,html}": [
            "stylelint --fix",
            "prettier --write"
        ],
        "*.md": [
            "prettier --write"
        ]
    },
    "types": "types/global.d.ts",
    "config": {
        "commitizen": {
            "path": "node_modules/cz-git"
        }
    }
}
