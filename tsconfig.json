{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "/@/*": [
        "./src/*"
      ],
      "/#/*": [
        "./types/*"
      ],
      "@i8n/*": ["./i8n/*"],
      "@tests/*": ["./tests/*"],
      "@mocks/*": ["./mocks/*"],
      "@components": ["./src/components/*"],
      "~styles": ["./src/styles/*"]
    },
    "types": [
      "vite/client"
    ],
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "build/**/*.ts",
    "build/**/*.d.ts",
    "mock/**/*.ts",
    "tests/**/*.ts",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "tests/*.ts",
    "dist",
    "**/*.js",
  ],
  // "references": [{ "path": "./tsconfig.node.json" }]
}
